{
	"env": {
		"browser": true,
		"es2021": true,
		"commonjs": true,
		"es6": true,
		"jquery": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"allowImportExportEverywhere": true
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			0,
			"windows"
		],
		"quotes": [
			"error",
			"double"
		],
		"semi": [
			"error",
			"always"
		],
		"camelcase": 1,
		"comma-dangle": [
			1,
			"never"
		],
		"comma-spacing": 1,
		"no-trailing-spaces": 1,
		"no-unused-vars": 0
	}
}